{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "lib": ["es5", "es6", "scripthost"],
    "types": ["node", "reflect-metadata"],
    "skipLibCheck": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["./src/__tests__/*"],
      "@config/*": ["./src/config/*"],
      "@constants/*": ["./src/constants/*"],
      "@di/*": ["./src/di/*"],
      "@notifications/*": ["./src/integrations/notifications/*"],
      "@repositories/*": ["./src/integrations/repositories/*"],
      "@type/*": ["./src/types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "script",
    "static",
    "stories",
    ".storybook"
  ]
}
